<% content_for(:head) do %>
<script language="Javascript" type="text/javascript">

  // BERLIN
  $(function() {
    var feed = new google.feeds.Feed("http://www.lepetitjournal.com/index.php?option=com_ninjarsssyndicator&feed_id=5&format=raw");

    feed.setNumEntries(10);
    feed.load(function(data){
      var element = $("#berlin");
      var items = data.feed.entries;

      $.each(items, function(i, item){
        
        var dt = $("<dt></dt>");
        var dd = $("<dd></dd>");
        var a = $("<a></a>")
        var date = $("<span class='date'></span>")
        date.text(convertAtomDateString(item.publishedDate));

        a.text(item.title)
          .attr("href", item.link)
          .attr("target", "_blank");

        date.appendTo(dt);
        a.appendTo(dd);  
        dt.appendTo(element.find("dl"));
        dd.appendTo(element.find("dl"));
      });
    });
  });
  
