<!DOCTYPE HTML PUBLIC "-//W3C//DTD XHTML 1.0 Strict//EN" "http://www.w3.org/TR/xhtml1/DTD/xhtml-1-strict.dtd">
<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="FR" lang="FR">
<head>
  <title><%= @page_title || '[admin]' %></title>

  <%= stylesheet_link_tag "text", "standard", "admin", "cms", "user", :media => 'all' %>
  <%= javascript_include_tag :defaults %>

  <%= @content_for_stylesheet %>
  <script type="text/javascript"><%= @content_for_page_scripts %></script>
  <meta http-equiv="Content-Type" content="text/html;charset=UTF-8" />
</head>
<body>

	<h2 id="site-title">Connexion Fran√ßaise</h2>
  
  <div id="option-box">
    <%= render :partial => "admin/shared/connect" %>
    <div id="public-site">
      <%= link_to l('public site'), :controller => "/home", :action => "index" %>&nbsp;|&nbsp;
    </div>
    <%= render :partial => "shared/flags" %>
  </div>

  <div id="header">
    <%= render :partial => "admin/shared/applications" %>
  </div>

  <div id="pagetitle">
    <div class="wrapper">
      <div id="title" class="<%= params[:controller].split('/').last %>">
        <h1><%= @page_title || 'Title' %></h1>
      </div>
      <% if flash[:notice] -%>  
      <div id="notice">
        <em><%= l(flash[:notice]) %></em>
      </div>
      <% end -%>
    </div>
    <div class="clear"></div>
  </div>

  <%= load_indicator :yellow %>

  <div id="container">
    <div class="wrapper">
      
      <div id="tabs">
        <%= render :partial => "admin/shared/tabs" %>
      </div>  

      <div id="content"<%= " style='border-top: solid 1px #AF9567;'" if @tabs.nil? %>><div id="c">
      <%= yield %>
      </div></div>
    </div>
  </div>

  <div id="footer"></div>
  
</body>
</html>
